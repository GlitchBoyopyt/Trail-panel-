FROM ubuntu:20.04

# Install necessary packages
RUN apt-get update && apt-get install -y \
    wget \
    curl \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Create a directory for the game server
RUN mkdir -p /opt/game-server

# Set the working directory
WORKDIR /opt/game-server

# Download and install the game server (example: a Minecraft server)
RUN wget https://launcher.mojang.com/v1/objects/your_minecraft_server_file.jar -O minecraft_server.jar

# Expose the necessary port (example: 25565 for Minecraft)
EXPOSE 25565

# Command to run the game server
CMD ["java", "-Xmx1024M", "-Xms1024M", "-jar", "minecraft_server.jar", "nogui"]


   
